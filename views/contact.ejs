<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Contact | Krishna Camps</title>

  <link rel="stylesheet" href="/main.css" />
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;600;800&display=swap" rel="stylesheet">

  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      font-family: 'Montserrat', sans-serif;
    }

    body {
      background: url('/vintage-pink-telephone-composition.jpg') no-repeat center center/cover;
      background-attachment: fixed;
      color: #fff;
      min-height: 100vh;
      display: flex;
      flex-direction: column;
    }

    main {
      flex: 1;
      display: flex;
      justify-content: center;
      align-items: center;
      padding: 100px 20px 60px;
    }

    .contact-container {
      background: rgba(255, 255, 255, 0.1);
      border: 1px solid rgba(255, 255, 255, 0.3);
      backdrop-filter: blur(12px);
      border-radius: 18px;
      padding: 40px 35px;
      width: 90%;
      max-width: 500px;
      box-shadow: 0 8px 25px rgba(0, 0, 80, 0.3);
      animation: fadeIn 1.2s ease-in-out;
    }

    .contact-container h1 {
      text-align: center;
      color:#450693;
      font-weight: 700;
      margin-bottom: 10px;
      font-size: 2.2rem;
    }

    .contact-container p {
      text-align: center;
      color: #16476A;
      font-size: 0.95rem;
      margin-bottom: 25px;
    }

    form {
      display: flex;
      flex-direction: column;
      gap: 18px;
    }

    input {
      padding: 14px 15px;
      border: 1px solid rgba(255, 255, 255, 0.4);
      border-radius: 8px;
      outline: none;
      background: rgba(255, 255, 255, 0.85);
      font-size: 1rem;
      transition: 0.3s;
      color: #003366;
      width: 100%;
    }

    input:focus {
      background: white;
      border-color: #4a90e2;
      box-shadow: 0 0 10px rgba(74, 144, 226, 0.5);
    }

    button {
      background: linear-gradient(135deg, #4a90e2, #1e3a8a);
      color: white;
      border: none;
      padding: 14px;
      border-radius: 8px;
      font-size: 1rem;
      font-weight: 600;
      cursor: pointer;
      transition: 0.3s;
    }

    button:hover {
      background: linear-gradient(135deg, #2563eb, #0f172a);
      box-shadow: 0 4px 15px rgba(37, 99, 235, 0.4);
      transform: scale(1.03);
    }

    .alert {
      position: fixed;
      top: 90px;
      right: 450px;
      padding: 15px 25px;
      background-color: #007BFF;
      color: white;
      border-radius: 5px;
      box-shadow: 0px 4px 6px rgba(0,0,0,0.2);
      font-family: sans-serif;
      z-index: 1000;
      opacity: 0;
      transition: opacity 0.5s ease;
    }

    .alert.show {
      opacity: 1;
    }

   .designation-container {
  position: relative;
  display: flex;
  align-items: center;
  gap: 8px;
  width: 100%;
  max-width: 400px;
}

#designationInput {
  flex: 1;
  padding: 14px 14px;
  border: 1px solid #ccc;
  border-radius: 8px;
}

.dropdown-container {
  position: relative;
}

#dropdownBtn {
  background-color: #007bff;
  color: white;
  border: none;
  border-radius: 6px;
  padding: 6px 10px;
  cursor: pointer;
}

#dropdownBtn:hover {
  background-color: #0056b3;
}

.dropdown-list {
  display: none;
  position: absolute;
  top: 110%;
  right: 0;
  background: white;
  border: 1px solid #ccc;
  border-radius: 6px;
  box-shadow: 0 4px 8px rgba(0,0,0,0.1);
  width: 250px;
  z-index: 10;
}

#searchBox {
  width: 100%;
  padding: 6px 10px;
  border: none;
  border-bottom: 1px solid #ddd;
  outline: none;
}

#designationOptions {
  list-style: none;
  margin: 0;
  padding: 0;
  max-height: 200px;
  overflow-y: auto;
  color:black;
}

#designationOptions li {
  padding: 8px 10px;
  cursor: pointer;
}

#designationOptions li:hover {
  background-color: #f1f1f1;
}

    .hidden {
      display: none;
    }

    @media (max-width: 768px) {
      .contact-container {
        padding: 30px 20px;
      }
      .contact-container h1 {
        font-size: 1.8rem;
      }
      input, button {
        font-size: 0.95rem;
      }
    }

    @media (max-width: 480px) {
      .contact-container {
        width: 95%;
        padding: 25px 18px;
      }
      .alert {
        right: 10px;
        top: 180px;
      }
    }
  </style>
</head>

<body>
  <%- include('partial/nav') %>
  <div id="alertMessage" class="alert"></div>

  <main>
    <div class="contact-container">
      <h1>Contact Us</h1>
      <p>We’d love to hear from you! Fill out the form below to connect with the Krishna Camps team.</p>

      <form id="contactForm">
        <input type="text" name="name" placeholder="Full Name" required>
        <input type="email" name="email" placeholder="Email" required>
        <input type="text" id="contact" name="contact" placeholder="Contact Number" required>

        <div class="designation-container">
  <input type="text" id="designationInput" name="designation" placeholder="Designation" required>
  <div class="dropdown-container">
    <button type="button" id="dropdownBtn">▼</button>
    <div id="dropdownList" class="dropdown-list">
      <input type="text" id="searchBox" placeholder="Search...">
      <ul id="designationOptions">
        <li>Principal</li>
        <li>Vice Principal</li>
        <li>Headmaster</li>
        <li>Academic Coordinator</li>
        <li>Class Teacher</li>
        <li>Subject Teacher</li>
        <li>English Teacher</li>
        <li>Science Teacher</li>
        <li>Computer Teacher</li>
        <li>Physical Education Teacher</li>
        <li>Music Teacher</li>
        <li>Art Teacher</li>
        <li>Librarian</li>
        <li>Special Educator</li>
        <li>Lab Assistant</li>
        <li>Admission Counselor</li>
        <li>School Manager</li>
        <li>HR Executive</li>
        <li>Sports Coach</li>
      </ul>
    </div>
  </div>
</div>


        <input type="text" name="schoolname" placeholder="School Name" required>
        <button type="submit">Submit</button>
      </form>
    </div>
  </main>

  <%- include('partial/footer') %>

  <script>
    const form = document.getElementById('contactForm');
    const alertDiv = document.getElementById('alertMessage');

    function showAlert(message, type) {
      alertDiv.innerText = message;
      alertDiv.style.backgroundColor = type === 'success' ? '#28a745' : '#dc3545';
      alertDiv.classList.add('show');
      setTimeout(() => alertDiv.classList.remove('show'), 1000);
    }

    form.addEventListener('submit', async (e) => {
      e.preventDefault();
      const formData = new FormData(form);
      const data = Object.fromEntries(formData.entries());
      const contact = data.contact.trim();

      const basicCheck = /^[6-9]\d{9}$/.test(contact);
      const allZeroAfterFirst = /^[6-9]0{9}$/.test(contact);

      if (!basicCheck || allZeroAfterFirst) {
        showAlert('Please enter a valid 10-digit mobile number.', 'error');
        return;
      }

      try {
        const response = await fetch('/submit', {
          method: 'POST',
          headers: {'Content-Type':'application/json'},
          body: JSON.stringify(data)
        });

        if (response.ok) {
          showAlert('Your information has been submitted successfully!', 'success');
          setTimeout(() => window.location.href = '/', 1000);
        } else {
          showAlert('Something went wrong. Please try again.', 'error');
        }
      } catch(err) {
        showAlert('Error: ' + err.message, 'error');
      }
    });


    const contactInput = document.getElementById('contact');

contactInput.addEventListener('input', () => {
  // Remove any non-digit characters
  let number = contactInput.value.replace(/\D/g, '');

  // If it starts with 91, remove it to avoid duplication
  if (number.startsWith('91') && number.length > 10) {
    number = number.slice(2);
  }

  // If exactly 10 digits entered, add +91 prefix
  if (number.length === 10) {
    contactInput.value = `+91 ${number}`;
  } else {
    contactInput.value = number;
  }
});

    const dropdownBtn = document.getElementById('dropdownBtn');
const dropdownList = document.getElementById('dropdownList');
const designationInput = document.getElementById('designationInput');
const searchBox = document.getElementById('searchBox');
const options = document.querySelectorAll('#designationOptions li');

// Toggle dropdown visibility
dropdownBtn.addEventListener('click', () => {
  dropdownList.style.display = dropdownList.style.display === 'block' ? 'none' : 'block';
  searchBox.value = '';
  searchBox.focus();
});

// Select option
options.forEach(option => {
  option.addEventListener('click', () => {
    designationInput.value = option.textContent;
    dropdownList.style.display = 'none';
  });
});

// Search filter
searchBox.addEventListener('input', () => {
  const filter = searchBox.value.toLowerCase();
  options.forEach(option => {
    const text = option.textContent.toLowerCase();
    option.style.display = text.includes(filter) ? 'block' : 'none';
  });
});

// Close dropdown if clicked outside
document.addEventListener('click', (e) => {
  if (!e.target.closest('.dropdown-container')) {
    dropdownList.style.display = 'none';
  }
});

  </script>
</body>
</html>
